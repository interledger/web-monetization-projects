{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "$overRideUpKeep": {
    "author": "niq@coil.com",
    "keywords": [
      "groundskeeper",
      "monorepo",
      "willy"
    ]
  },
  "name": "@coil/monorepo-upkeep",
  "version": "0.0.0",
  "keywords": [
    "groundskeeper",
    "monorepo",
    "willy"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/coil-monorepo-upkeep",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "niq@coil.com",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "build:ts:watch": "yarn build:ts --watch",
    "clean:build": "rimraf build",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "yarn lint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{ts,tsx,js,html,jsx,md}'",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --verbose --coverage",
    "test:e2e": "yarn test --config jest-e2e.config.js",
    "test:e2e:coverage": "yarn test:coverage --config jest-e2e.config.js",
    "upkeep": "cd ../.. && yarn upkeep"
  },
  "dependencies": {
    "copy-dir": "^1.3.0",
    "deepmerge": "^4.2.2",
    "json5": "^2.2.0",
    "npm-check-updates": "^13.0.0",
    "reduct": "^3.3.1",
    "sort-package-json": "1.57.0",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/plugin-proposal-class-properties": "7.17.12",
    "@babel/plugin-proposal-decorators": "7.18.2",
    "@babel/plugin-proposal-object-rest-spread": "7.18.0",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@swc/core": "1.2.197",
    "@swc/jest": "0.2.21",
    "@types/jest": "28.1.1",
    "@types/node": "16.11.39",
    "@typescript-eslint/eslint-plugin": "5.28.0",
    "@typescript-eslint/parser": "5.28.0",
    "@yarnpkg/pnpify": "3.1.3",
    "JSON2016": "1.0.0",
    "babel-plugin-parameter-decorator": "1.0.16",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "8.0.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "lint-staged": "13.0.1",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.4",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.3",
    "webpack": "5.73.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.2",
    "webpack-merge": "5.8.0"
  }
}
