{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "name": "@coil/local-server",
  "version": "0.0.0",
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/coil-local-server",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "Coil Team <info@coil.com>",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "build:ts:watch": "yarn build:ts --watch",
    "clean:build": "rimraf build",
    "dev:graphql-watch": "yarn generate-graphql --watch",
    "dev:server": "nodemon src/index.ts",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "generate-graphql": "graphql-codegen --config codegen.yml",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "yarn lint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{ts,tsx,js,html,jsx,md}'",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --verbose --coverage",
    "test:e2e": "yarn test --config jest-e2e.config.js",
    "test:e2e:coverage": "yarn test:coverage --config jest-e2e.config.js",
    "upkeep": "cd ../.. && yarn upkeep"
  },
  "dependencies": {
    "@abraham/reflection": "^0.10.0",
    "@apollo/utils.logger": "^1.0.0",
    "@graphql-tools/graphql-file-loader": "^7.3.12",
    "@graphql-tools/load": "^7.5.11",
    "@graphql-tools/schema": "^8.3.11",
    "@graphql-tools/utils": "^8.6.10",
    "@interledger/stream-receiver": "^0.3.3-alpha.1",
    "apollo-server-core": "^3.7.0",
    "apollo-server-express": "^3.7.0",
    "compose-middleware": "^5.0.1",
    "express": "^4.18.1",
    "express-jwt": "^7.7.0",
    "express-ws": "^5.0.2",
    "graphql": "^16.4.0",
    "graphql-tools": "^8.2.9",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-decorators": "7.17.9",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/preset-env": "7.17.10",
    "@babel/preset-typescript": "7.16.7",
    "@coil/client": "0.0.0",
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-resolvers": "2.6.4",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "16.11.34",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.23.0",
    "@yarnpkg/pnpify": "3.1.1",
    "JSON2016": "1.0.0",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "copy-webpack-plugin": "10.2.4",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "7.0.4",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "lerna": "4.0.0",
    "lint-staged": "12.4.1",
    "nodemon": "^2.0.16",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.2",
    "ts-loader": "9.3.0",
    "ts-node": "10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.6.4",
    "webpack": "5.72.1",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.0",
    "webpack-merge": "5.8.0"
  }
}
