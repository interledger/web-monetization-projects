{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "name": "@coil/local-server",
  "version": "0.0.0",
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/coil-local-server",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "Coil Team <info@coil.com>",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "pnpm build:ts --verbose",
    "build:ts:watch": "pnpm build:ts --watch",
    "clean:build": "rimraf build",
    "dev:graphql-watch": "pnpm generate-graphql --watch",
    "dev:server": "nodemon src/index.ts",
    "format": "pnpm prettier && LINT_FIX=1 pnpm lint:all --fix --quiet",
    "generate-code": "pnpm generate-graphql && pnpm prettier && pnpm lint:all --fix",
    "generate-graphql": "graphql-codegen --config codegen.yml",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "pnpm lint 'src/**/*.{mts,ts,tsx}' 'test/**/*.{mts,ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{mts,ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{mts,ts,tsx,js,html,jsx,md}'",
    "test": "NODE_OPTIONS=--experimental-vm-modules  PROJECT_JEST=1 jest --passWithNoTests  --config jest.config.cjs",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules  PROJECT_JEST=1 jest --passWithNoTests --verbose --coverage --config jest.config.cjs",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules JEST_E2E=1 PROJECT_JEST=1 jest --passWithNoTests  --config jest.config.cjs",
    "test:e2e:coverage": "NODE_OPTIONS=--experimental-vm-modules JEST_E2E=1 PROJECT_JEST=1 jest --passWithNoTests --verbose --coverage --config jest.config.cjs",
    "tsnodeenv": "NODE_OPTIONS=\"${NODE_OPTIONS:-} --require tsconfig-paths/register\" TS_NODE_PROJECT=\"../../tsconfig.cjs.json\"",
    "upkeep": "cd ../.. && pnpm upkeep"
  },
  "dependencies": {
    "@abraham/reflection": "^0.12.0",
    "@apollo/utils.logger": "^2.0.0",
    "@coil/privacypass-sjcl": "0.0.0",
    "@coil/puppeteer-utils": "0.0.0",
    "@graphql-tools/graphql-file-loader": "^8.0.0",
    "@graphql-tools/load": "^8.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.0",
    "@interledger/stream-receiver": "^0.3.3-alpha.1",
    "apollo-server-core": "^3.7.0",
    "apollo-server-express": "^3.7.0",
    "body-parser": "^1.20.0",
    "compose-middleware": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "express-jwt": "^8.0.0",
    "express-ws": "^5.0.2",
    "graphql": "^16.4.0",
    "graphql-tools": "^9.0.0",
    "ilp-plugin-mini-accounts": "^4.2.0",
    "ilp-protocol-stream": "2.7.2-alpha.2",
    "inversify": "^6.0.1",
    "inversify-express-utils": "^6.4.3",
    "inversify-logger-middleware": "^3.1.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@coil/client": "0.0.0",
    "@graphql-codegen/cli": "3.3.1",
    "@graphql-codegen/introspection": "3.0.1",
    "@graphql-codegen/typescript": "3.0.4",
    "@graphql-codegen/typescript-resolvers": "3.2.1",
    "@types/body-parser": "1.19.2",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@webmonetization/types": "0.0.0"
  }
}
