{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "$overRideUpKeep": {
    "version": "0.0.52"
  },
  "name": "@coil/extension",
  "version": "0.0.52",
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/coil-extension",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "Coil Team <info@coil.com>",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build": "./build.sh dev",
    "build-prod": "./build.sh prod",
    "build-staging": "./build.sh staging",
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "build:ts:watch": "yarn build:ts --watch",
    "clean:build": "rimraf build",
    "dev": "WEXT_MANIFEST_SUFFIX=Dev TSCONFIG_DEBUG=true TS_LOADER_TRANSPILE_ONLY=true LIVE_RELOAD=true yarn",
    "dev-chrome-prod": "yarn dev build-prod chrome --watch",
    "dev-chrome-staging": "yarn dev build-staging chrome --watch",
    "dev-edge-prod": "yarn dev build-prod edge --watch",
    "dev-edge-staging": "yarn dev build-staging edge --watch",
    "dev-firefox-prod": "yarn dev build-prod firefox --watch",
    "dev-firefox-staging": "yarn dev build-staging firefox --watch",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "yarn lint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{ts,tsx,js,html,jsx,md}'",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --verbose --coverage",
    "upkeep": "cd ../.. && yarn upkeep"
  },
  "dependencies": {
    "@abraham/reflection": "^0.7.0",
    "@coil/anonymous-tokens": "^0.0.0",
    "@coil/client": "^0.0.0",
    "@coil/playwright-utils": "^0.0.0",
    "@coil/polyfill-utils": "^0.0.0",
    "@dier-makr/annotations": "^0.0.0",
    "@dier-makr/inversify": "^0.0.0",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/styles": "^4.11.3",
    "@web-monetization/polyfill-utils": "^0.0.0",
    "@web-monetization/types": "^0.0.0",
    "@web-monetization/wext": "^0.0.0",
    "debug": "^4.3.1",
    "ilp-plugin-btp": "1.4.2",
    "ilp-protocol-stream": "2.6.5",
    "inversify": "^5.0.5",
    "inversify-logger-middleware": "^3.1.0",
    "jsonwebtoken": "^8.5.1",
    "jss": "^10.5.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "reduct": "^3.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.0",
    "@babel/preset-env": "^7.13.0",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/debug": "^4.1.5",
    "@types/filesystem": "^0.0.29",
    "@types/firefox": "^0.0.30",
    "@types/har-format": "^1.2.5",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/long": "^4.0.1",
    "@types/node": "^14.10.3",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^16.14.4",
    "@types/react-dom": "^16.9.11",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "@webexts/build-utils": "^0.0.0",
    "@wext/shipit": "^0.2.1",
    "JSON2016": "^1.0.0",
    "addons-linter": "^2.19.0",
    "copy-webpack-plugin": "^7.0.0",
    "crx-hotreload": "^1.0.6",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "puppeteer": "^7.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5",
    "web-ext": "^5.5.0",
    "webpack": "^5.24.2",
    "webpack-bundle-analyzer": "^4.4.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.2"
  }
}
