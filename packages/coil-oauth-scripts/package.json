{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "name": "@coil/oauth-scripts",
  "version": "0.0.0",
  "description": "Scripts for sites that use 'Sign in with Coil'",
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/coil-oauth-scripts",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "Coil Team <info@coil.com>",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build": "webpack-cli --config webpack.config.ts",
    "build-prod": "webpack-cli --config webpack.config.ts --mode production",
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "build:ts:watch": "yarn build:ts --watch",
    "clean:build": "rimraf build",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "get-btp-token": "ts-node -P ../../tsconfig.json -r tsconfig-paths/register -T src/bin/coil-it.ts",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "yarn lint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{ts,tsx,js,html,jsx,md}'",
    "serve": "python -m http.server 4000",
    "serve-it": "ts-node -P ../../tsconfig.json -r tsconfig-paths/register -T src/bin/serve-it.ts",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --verbose --coverage",
    "test:e2e": "yarn test --config jest-e2e.config.js",
    "test:e2e:coverage": "yarn test:coverage --config jest-e2e.config.js",
    "upkeep": "cd ../.. && yarn upkeep",
    "webpack-comments": "if have -cli (for -dev-server) and -command installed",
    "webpack-comments_": "must explicitly set webpack-command"
  },
  "dependencies": {
    "@coil/client": "0.0.0",
    "@coil/polyfill-utils": "^0.0.0",
    "@webmonetization/polyfill-utils": "0.0.0",
    "@webmonetization/types": "0.0.0",
    "ilp-plugin-btp": "patch:ilp-plugin-btp@npm%3A1.5.0#~/.yarn/patches/ilp-plugin-btp-npm-1.5.0-f669b16b57.patch",
    "ilp-protocol-stream": "^2.7.2-alpha.2",
    "node-fetch": "^2.6.1",
    "reduct": "^3.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@abraham/reflection": "0.12.0",
    "@babel/core": "7.21.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-decorators": "7.21.0",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.4",
    "@coil/puppeteer-utils": "^0.0.0",
    "@coil/webpack-utils": "0.0.0",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@swc/core": "1.3.44",
    "@swc/jest": "0.2.24",
    "@types/jest": "29.5.0",
    "@types/long": "4.0.2",
    "@types/node": "16.18.18",
    "@types/node-fetch": "2.6.2",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "@yarnpkg/pnpify": "3.1.6",
    "JSON2016": "1.0.0",
    "babel-plugin-parameter-decorator": "1.0.16",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-node": "0.3.7",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.1.2",
    "nodemon": "2.0.22",
    "prettier": "2.8.4",
    "puppeteer": "19.7.1",
    "regenerator-runtime": "0.13.11",
    "rimraf": "4.1.2",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.9.5",
    "webpack": "5.77.0",
    "webpack-bundle-analyzer": "4.8.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "webpack-merge": "5.8.0"
  }
}
