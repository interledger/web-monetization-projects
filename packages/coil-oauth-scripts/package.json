{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "name": "@coil/oauth-scripts",
  "version": "0.0.0",
  "description": "Scripts for sites that use 'Sign in with Coil'",
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/coil-oauth-scripts",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "Coil Team <info@coil.com>",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build": "webpack-cli --config webpack.config.ts",
    "build-prod": "webpack-cli --config webpack.config.ts --mode production",
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "build:ts:watch": "yarn build:ts --watch",
    "clean:build": "rimraf build",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "get-btp-token": "ts-node -P ../../tsconfig.json -r tsconfig-paths/register -T src/bin/coil-it.ts",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "yarn lint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{ts,tsx,js,html,jsx,md}'",
    "serve": "python -m http.server 4000",
    "serve-it": "ts-node -P ../../tsconfig.json -r tsconfig-paths/register -T src/bin/serve-it.ts",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --verbose --coverage",
    "test:e2e": "yarn test --config jest-e2e.config.js",
    "test:e2e:coverage": "yarn test:coverage --config jest-e2e.config.js",
    "upkeep": "cd ../.. && yarn upkeep",
    "webpack-comments": "if have -cli (for -dev-server) and -command installed",
    "webpack-comments_": "must explicitly set webpack-command"
  },
  "dependencies": {
    "@coil/client": "0.0.0",
    "@coil/polyfill-utils": "^0.0.0",
    "@webmonetization/polyfill-utils": "0.0.0",
    "@webmonetization/types": "0.0.0",
    "ilp-plugin-btp": "1.5.0",
    "ilp-protocol-stream": "2.7.1",
    "node-fetch": "^2.6.1",
    "reduct": "^3.3.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "7.17.10",
    "@babel/plugin-proposal-class-properties": "7.16.7",
    "@babel/plugin-proposal-decorators": "7.17.9",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/preset-env": "7.17.10",
    "@babel/preset-typescript": "7.16.7",
    "@coil/puppeteer-utils": "^0.0.0",
    "@coil/webpack-utils": "0.0.0",
    "@commitlint/cli": "16.2.4",
    "@commitlint/config-conventional": "16.2.4",
    "@types/jest": "27.5.0",
    "@types/long": "4.0.2",
    "@types/node": "16.11.33",
    "@types/node-fetch": "2.6.1",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "@yarnpkg/pnpify": "3.1.1",
    "JSON2016": "1.0.0",
    "copy-webpack-plugin": "10.2.4",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.1.5",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.29.4",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "7.0.4",
    "jest": "28.1.0",
    "jest-environment-jsdom": "28.1.0",
    "lerna": "4.0.0",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "puppeteer": "14.0.0",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.2",
    "ts-loader": "9.3.0",
    "ts-node": "10.7.0",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.6.4",
    "webpack": "5.72.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.0",
    "webpack-merge": "5.8.0"
  }
}
