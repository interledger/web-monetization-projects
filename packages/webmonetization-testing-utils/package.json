{
  "$schema": "../coil-monorepo-upkeep/resources/package-json-schema-nested-overrides.json",
  "name": "@webmonetization/testing-utils",
  "version": "0.0.0",
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "homepage": "https://github.com/coilhq/web-monetization-projects/tree/main/packages/webmonetization-testing-utils",
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "license": "Apache-2.0",
  "author": "Coil Team <info@coil.com>",
  "main": "./build",
  "types": "./build",
  "scripts": {
    "build": "webpack-cli",
    "build:ts": "tsc --build tsconfig.build.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "build:ts:watch": "yarn build:ts --watch",
    "clean:build": "rimraf build",
    "dev": "webpack serve -c webpack.config.ts",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "lint": "eslint --cache --cache-location ../../node_modules/.cache/eslint",
    "lint:all": "yarn lint 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "precommit": "echo lint-staged runs from root",
    "prettier": "prettier --write '*.{ts,tsx,js,html,jsx,md}' '{src,test}/**/*.{ts,tsx,js,html,jsx,md}'",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn test --verbose --coverage",
    "test:e2e": "yarn test --config jest-e2e.config.js",
    "test:e2e:coverage": "yarn test:coverage --config jest-e2e.config.js",
    "upkeep": "cd ../.. && yarn upkeep"
  },
  "dependencies": {
    "@webmonetization/types": "0.0.0",
    "ajv": "^8.6.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-hot-loader": "^4.13.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@abraham/reflection": "0.12.0",
    "@babel/core": "7.21.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-decorators": "7.21.0",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.21.4",
    "@babel/preset-react": "7.18.6",
    "@babel/preset-typescript": "7.21.4",
    "@coil/webpack-utils": "^0.0.0",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@hot-loader/react-dom": "17.0.2",
    "@swc/core": "1.3.44",
    "@swc/jest": "0.2.24",
    "@types/ajv": "1.0.0",
    "@types/jest": "29.5.0",
    "@types/node": "16.18.18",
    "@types/react": "17.0.56",
    "@types/react-dom": "17.0.19",
    "@types/uuid": "9.0.1",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "@yarnpkg/pnpify": "3.1.6",
    "JSON2016": "1.0.0",
    "babel-plugin-parameter-decorator": "1.0.16",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-node": "0.3.7",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-standard": "5.0.0",
    "html-webpack-plugin": "5.5.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-environment-jsdom": "29.5.0",
    "lint-staged": "13.2.0",
    "nodemon": "2.0.22",
    "prettier": "2.8.4",
    "regenerator-runtime": "0.13.11",
    "rimraf": "4.1.2",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.2",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "4.9.5",
    "webpack": "5.78.0",
    "webpack-bundle-analyzer": "4.8.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.13.2",
    "webpack-merge": "5.8.0"
  }
}
