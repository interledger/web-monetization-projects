{
  "name": "web-monetization",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:coilhq/web-monetization-projects.git"
  },
  "scripts": {
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint",
    "test": "jest --passWithNoTests",
    "test:e2e": "yarn test --config jest-e2e.config.js",
    "test:e2e:coverage": "yarn test:coverage --config jest-e2e.config.js",
    "test:coverage": "yarn test --coverage --verbose",
    "prettier": "prettier --write 'packages/*/*.{html,js,ts,tsx,jsx,md}' 'packages/*/{src,test}/**/*.{ts,tsx,js,jsx,html,md}'",
    "format": "yarn prettier && LINT_FIX=1 yarn lint:all --fix --quiet",
    "upkeep": "ts-node -T packages/coil-monorepo-upkeep/upkeep.ts",
    "upkeep:new-package": "ts-node -T packages/coil-monorepo-upkeep/new-package.ts",
    "upkeep:check-updates": "ts-node -T packages/coil-monorepo-upkeep/check-updates.ts",
    "upkeep:get-main-devdeps": "ts-node -T packages/coil-monorepo-upkeep/get-main-devdeps.ts",
    "clean:build": "rimraf packages/*/build",
    "build:ts": "tsc --build tsconfig.references.json",
    "build:ts:verbose": "yarn build:ts --verbose",
    "lint:all": "yarn lint 'packages/*/{src,test}/**/*.ts*'",
    "lint:staged": "lint-staged --shell",
    "postinstall": "husky install"
  },
  "keywords": [
    "ilp",
    "web-monetization"
  ],
  "author": "Coil Team <info@coil.com>",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{md,js,jsx,html}": [
      "prettier --write"
    ],
    "*.ts*": [
      "prettier --write",
      "yarn lint --fix"
    ]
  },
  "resolutions": {
    "@types/react": "17.0.45",
    "@types/serve-static": "1.13.10",
    "@wext/shipit": "patch:@wext/shipit@npm:0.2.1#.yarn/patches/@wext-shipit-npm-0.2.1-0aefb3f515",
    "debug": "patch:debug@npm%3A4.3.4#~/.yarn/patches/debug-npm-4.3.4-4513954577.patch"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/plugin-proposal-class-properties": "7.17.12",
    "@babel/plugin-proposal-decorators": "7.18.2",
    "@babel/plugin-proposal-object-rest-spread": "7.18.0",
    "@babel/preset-env": "7.18.2",
    "@babel/preset-typescript": "7.17.12",
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@swc/core": "1.2.197",
    "@swc/jest": "0.2.21",
    "@types/jest": "28.1.1",
    "@types/node": "16.11.39",
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "@yarnpkg/pnpify": "3.1.3",
    "JSON2016": "1.0.0",
    "babel-plugin-parameter-decorator": "1.0.16",
    "babel-plugin-transform-typescript-metadata": "0.3.2",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-node": "0.3.6",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.0",
    "eslint-plugin-react-hooks": "4.5.0",
    "eslint-plugin-standard": "5.0.0",
    "husky": "8.0.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "lint-staged": "13.0.1",
    "nodemon": "2.0.16",
    "prettier": "2.6.2",
    "regenerator-runtime": "0.13.9",
    "rimraf": "3.0.2",
    "ts-jest": "28.0.4",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.3",
    "webpack": "5.73.0",
    "webpack-bundle-analyzer": "4.5.0",
    "webpack-cli": "4.9.2",
    "webpack-dev-server": "4.9.2",
    "webpack-merge": "5.8.0"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "packageManager": "yarn@4.0.0-rc.8"
}
